{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body {
            background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.9)),
            url("{{ asset('uploads/backdrops/' ~ serie.backdrop) }}")
        }
    </style>

    <h2>Serie {{ serie.name }}</h2>

    <span>Genre: {{ serie.genre }}</span><br>
    <span>Statut: {{ serie.status }}</span><br>
    <span>{{ serie.firstAirDate|date('d/m/Y') }}</span>

    <p>{{ serie.overview }}</p>

    <a href="{{ path('serie_update', { id: serie.id }) }}" class="btn btn-primary">Editer</a>

{% endblock %}