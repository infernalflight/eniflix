<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Eniflix{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/icon.png') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <h1><img src="{{ asset('images/logo.png') }}" alt="Logo Eniflix"></h1>
        <nav>
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('serie_list') }}">Catalogue</a></li>
                <li><a href="{{ path('serie_create') }}">Nouvelle s√©rie</a></li>
                <li><a href="{{ path('season_create') }}">Nouvelle saison</a></li>
            </ul>
        </nav>

        {% for type, messages in app.flashes %}
            {%  for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>
